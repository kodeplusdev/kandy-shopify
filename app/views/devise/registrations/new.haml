.col-sm-4
  %h2 Sign up
  = form_for resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'} do |f|
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form-control'
      - if resource.errors[:email].any?
        %p.text-danger
          = "Email #{resource.errors[:email][0]}"
    .form-group
      = f.label :password
      - if @validatable
        %i
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'form-control'
      - if resource.errors[:password].any?
        %p.text-danger
          = "Password #{resource.errors[:password][0]}"
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      - if resource.errors[:password_confirmation].any?
        %p.text-danger
          = "Password confirmation #{resource.errors[:password_confirmation][0]}"

    = f.submit 'Sign up', class: 'btn btn-primary'

  = render "devise/shared/links"