:coffeescript
  window.mainPageTitle = 'Setup (1/2)'

  ShopifyApp.ready ->
    ShopifyApp.Bar.initialize
      title: window.mainPageTitle
      icon: '/icon.png'
      buttons:
        primary:
          label: 'Next'
          message: 'save-form-message'
    ShopifyApp.Bar.loadingOff()

= form_for @shop, url: app_installed_kandy_account_path, method: :post, html: {'data-shopify-app-submit': 'save-form-message'} do |f|
  .row
    .col-sm-3
      %h5 Kandy Domain Keys
      %span.help-block
        If you don't have a Kandy account, please
        %a{href: 'https://developer.kandy.io/'} register
        with Kandy to start.
    .col-sm-9.panel
      .panel-body
        .form-group
          = f.label :kandy_api_key, 'Domain Key'
          %abbr{title: 'required'} *
          = f.text_field :kandy_api_key, class: 'form-control input-sm', placeholder: 'DAK24d0f137128846f8ba12204f3502****'
        .form-group
          = f.label :kandy_api_secret, 'Domain Secret Key'
          %abbr{title: 'required'} *
          = f.text_field :kandy_api_secret, class: 'form-control input-sm', placeholder: 'DAS7828b8cda2c04335923311b97284****'
