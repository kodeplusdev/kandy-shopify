.messages {
  padding: 5px;
  background: #ffffff none repeat scroll 0 0;
  min-height: 200px;
}

.messages div {
  height: auto;
  clear: both;
}

.messages div span {
  display: inline-block;
  padding: 5px;
  border-radius: 6px;
  position: relative;
  margin-bottom: 7px;
}

.messages div span.left {
  float: left;
  left: 15px;
  max-width: 78%;
  color: #333;
  min-width: 60px;
  padding-bottom: 25px;
  font-family: verdana;
  font-size: 11px;
  background: #e4f1fa !important
}

.messages div span.left:after {
  content: "";
  display: inline-block;
  position: absolute;
  left: -7.5px;
  top: 7px;
  height: 0px;
  width: 0px;
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
  border-right: 8px solid #e4f1fa;
}

.messages div span.left:before {
  content: "";
  display: inline-block;
  position: absolute;
  left: -9px;
  top: 7px;
  height: 0px;
  width: 0px;
}

.messages div span.right:after {
  content: "";
  display: inline-block;
  position: absolute;
  right: -8px;
  top: 6px;
  height: 0px;
  width: 0px;
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
  border-left: 8px solid rgba(232, 231, 231, 0.27);
}

.messages div span.right:before {
  content: "";
  display: inline-block;
  position: absolute;
  right: -9px;
  top: 6px;
  height: 0px;
  width: 0px;
}

.messages div span.right {
  float: right;
  text-align: right;
  padding: 5px 10px 25px;
  right: 15px;
  max-width: 75%;
  min-width: 60px;
  font-size: 12px;
  line-height: 14px;
  color: #333 !important;
  font-family: verdana;
  background-color: rgba(232, 231, 231, 0.27);
  box-shadow: -1px 1px 2px -1px rgba(0, 0, 0, 0.5);
}

.left-time {
  right: 7px;
  bottom: 7px;
  min-width: 50px;
  position: absolute;
  font-size: 9px;
  line-height: 1.5;
  color: #737a6e;
